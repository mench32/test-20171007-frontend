*
	margin 0
body
	font-family sans-serif
	color #333
.app
	margin 0 auto
	width 960px

.form
	font-size 0
	&_vin
		margin-right 16px
.input
	vertical-align top
	font-size 16px
	height 36px
	padding 0 12px
	border 1px solid #ccc
	border-radius 3px
	outline none
	box-sizing border-box
	&--error
		border-color #f00
	&--wide
		display block
		width 100%
	&:focus
		background #f8f8f8
.button
	vertical-align top
	height 36px
	border none
	font-size 14px
	text-transform: uppercase
	padding 0px 12px
	border-radius 3px
	background green
	color #fff
	outline none
	box-sizing border-box
	box-shadow 0 1px 2px 0 rgba(0,0,0,0.24), 0 0 8px 0 rgba(0,0,0,0.12)
	cursor pointer
	transition box-shadow .18s
	margin-left 16px
	&:active
		box-shadow 0 0 8px 0 rgba(0,0,0,0.12)
	&:disabled
		background #777
		cursor default


.form
	background #ddd
	padding 16px
.list
	width 100%
	background #efefef
	margin 0 0px
	border none
	td
	th
		margin 0
		border 0
		padding 12px
	th
		padding 6px 12px
		text-align left
	&_sort
		position relative
		user-select none
		cursor pointer
		&:after
			content ' '
			position absolute
			top 50%
			margin-left 8px
			width 0
			height 0
			border 6px solid transparent

		&--up
			&:after
				transform translateY(-80%)
				border-bottom 6px solid #333
		&--down
			&:after
				transform translateY(-30%)
				border-top 6px solid #333
	&_items
		tr
			margin 0
			border 0
			&:nth-child(2n)
				background rgba(0,0,0,.05)
	&_empty
		width 100%
		text-align center
		color #999


.online
.offline
	margin 13px
	width 10px
	height 10px
	border-radius 5px
	display inline-block
	background: green
.offline
	animation-name blink
	animation-duration 0.5s
	animation-timing-function linear
	animation-iteration-count infinite
	background #f00



@keyframes blink {
	0% {
		background transparent
	}
	50% {
		background #f00
	}
	100% {
		background transparent
	}
}
